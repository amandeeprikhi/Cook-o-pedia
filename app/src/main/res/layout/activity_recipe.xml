<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/recipe_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />
        <TextView
            android:textSize="30dp"
            android:textStyle="bold"
            android:id="@+id/recipe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HELLO!!!"
            android:layout_below="@+id/recipe_image"
            android:layout_centerHorizontal="true" />
        <TextView
            android:textSize="25dp"
            android:id="@+id/recipe_ingredients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INGREDIENTS"
            android:layout_below="@+id/recipe_name"
            android:layout_alignParentLeft="true" />
        <TextView
            android:textSize="15dp"
            android:id="@+id/ingredients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HELLO!!!"
            android:layout_below="@+id/recipe_ingredients" />
        <TextView
            android:textSize="25dp"
            android:id="@+id/recipe_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RECIPE"
            android:layout_below="@+id/ingredients"
            android:layout_alignParentLeft="true" />
        <TextView
            android:textSize="15dp"
            android:id="@+id/recipe_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HELLO!!!"
            android:layout_below="@+id/recipe_title"
            android:layout_alignParentLeft="true" />
        <Button
            android:textColor="#ffffff"
            android:id="@+id/cooked"
            android:background="#6fa34a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginTop="26dp"
            android:text="COOK"
            android:layout_below="@+id/recipe_details"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</ScrollView>
