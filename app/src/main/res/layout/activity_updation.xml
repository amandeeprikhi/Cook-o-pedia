<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="30dp"
        android:textStyle="bold"
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GROCERY UPDATION"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GROCERY:"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true" />
    <EditText
        android:id="@+id/grocery_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the grocery"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView4" />
    <TextView
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QUANTITY"
        android:layout_below="@+id/grocery_value"
        android:layout_alignLeft="@+id/grocery_value" />
    <Button
        android:textColor="#ffffff"
        android:id="@+id/update"
        android:background="#6fa34a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDATE"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />
    <EditText
        android:id="@+id/values"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="in kgs(not more than 5)"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true" />
</RelativeLayout>
