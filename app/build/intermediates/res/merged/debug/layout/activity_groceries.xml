<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/cooks"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:textSize="25dp"
        android:textStyle="bold"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GROCERIES"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true" />
    <TextView
        android:textSize="20dp"
        android:id="@+id/entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Black Lentils\nButter\nChocolate Hazelnut Spread\nCream Cheese\nHoney Nut Cornflakes\nOnion\nRice\nTomaotes\nWhite Flour"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true" />
    <TextView
        android:textSize="20dp"
        android:id="@+id/values"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/entry"
        android:layout_alignParentRight="true" />
    <TextView
        android:textSize="25dp"
        android:textStyle="bold"
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GROCERY"
        android:layout_above="@+id/values"
        android:layout_alignParentLeft="true" />
    <TextView
        android:textSize="25dp"
        android:textStyle="bold"
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="in kgs"
        android:layout_above="@+id/values"
        android:layout_alignRight="@+id/values" />
    <Button
        android:textColor="#ffffff"
        android:id="@+id/updation"
        android:background="#6fa34a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="46dp"
        android:text="UPDATE"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
